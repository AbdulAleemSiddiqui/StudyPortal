@model IEnumerable<FYP1.Models.Admin.AdmissionForm.AdmissionViewModel>

@{
    ViewBag.Title = "Get_Unpaid_Admission";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header" data-background-color="purple">
                <h4>Student Admissions</h4>
                <p class="category">@Html.ActionLink("Create New", "Create")</p>
            </div>
            <div class="card-content table-responsive">
                @if (ViewBag.Payment_Info != null)
                {
                <div id="notification" class="alert alert-info alert-with-icon" data-notify="container">
                    <button type="button" aria-hidden="true" class="close">×</button>
                    <i data-notify="icon" class="material-icons">add_alert</i>
                    <span data-notify="message">Note: The Last Admission you pay, following are the payment info for the institute you pay. <br /> <b>Payment Details: </b>@ViewBag.Payment_Info</span>
                </div>
                }
                <table class="table">
                    <thead class="text-gray">
                        <tr>
                            <th scope="col">
                                @Html.DisplayNameFor(model => model.Student_Name)
                            </th>
                            <th scope="col">
                                @Html.DisplayNameFor(model => model.CNIC_No)
                            </th>
                            <th scope="col">
                                @Html.DisplayNameFor(model => model.Father_Name)
                            </th>
                            <th scope="col">
                                @Html.DisplayNameFor(model => model.Institute_Name)
                            </th>
                            <th scope="col">
                                @Html.DisplayNameFor(model => model.Degree_Name)
                            </th>
                            <th scope="col">
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th scope="col">
                                Mark
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Student_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CNIC_No)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Father_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Institute_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Degree_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    <button onclick="window.location.href='@Url.Action("PayAdmission", "AdmissionForm", new { AI_ID = item.AI_ID })'" value="Pay" class="btn btn-primary">
                                        Pay
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>@section Scripts{
    <script>
            $('#notification').delay(5000).fadeOut('slow');
    </script>
    }