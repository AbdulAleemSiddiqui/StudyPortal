@model IEnumerable<FYP1.Models.Student.Student>
@{
    ViewBag.Title = "ShowStudent";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header" data-background-color="purple">
                <h2>Student</h2>
            </div>
            <div class="card-content table-responsive">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayName("Name")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Contact_No)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nationality)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.detail.Dl_Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.detail.Field_Name)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Student_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contact_No)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nationality)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.detail.Dl_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.detail.Field_Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditStudent", new { id = item.Student_ID }) |
                            @Html.ActionLink("Details", "SearchStudent", new { id = item.Student_ID }) |
                            @Html.ActionLink("Delete", "DeleteStudent", new { id = item.Student_ID })
                        </td>
                    </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
