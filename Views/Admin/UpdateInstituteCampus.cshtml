                                    </div>
                                </div>
                                <div class="col-md-4">

                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.InsCampus_Area, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.InsCampus_Area, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.InsCampus_Area, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                            </div>
                            <div class="row">
                                 <div class="col-md-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.InsCampus_Address, htmlAttributes: new { @class = "control-label" })

                                        @Html.EditorFor(model => model.InsCampus_Address, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.InsCampus_Address, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                           
