@model FYP1.Models.Institute.InstituteCampus

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

    ViewBag.Title = "UpdateInstituteCampus";
}



<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <h4 class="title"><b>Update</b></h4>
                        <p class="category"><b>Institute Campus</b></p>
                    </div>
                    <div class="card-content">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()


                    
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            @Html.HiddenFor(model => model.InsCampus_ID)
                            @Html.HiddenFor(model => model.Institute_ID)


                            <div class="row">


                                <div class="col-md-4">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.InsCampus_PhoneNo, htmlAttributes: new { @class = "control-label" })

                                        @Html.EditorFor(model => model.InsCampus_PhoneNo, new { htmlAttributes = new { @class = "form-control" } })
