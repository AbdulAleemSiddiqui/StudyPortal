@model FYP1.Models.FeedBack

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Add";
}



<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8" >
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <h4 class="title"><b>FeedBack</b></h4>
                        <p class="category"><b>Tell Us!!</b></p>
                    </div>
                    <div class="card-content">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                           
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Select User</label>
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.is_Student, htmlAttributes: new { @class = "control-label " })


                                            @Html.EditorFor(model => model.is_Student, new { htmlAttributes = new {  @type = "radio",@class= "radio" } })
                                            @Html.ValidationMessageFor(model => model.is_Student, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                             

                                    <div class="col-md-6">
                                        <label></label>
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.is_Institute, htmlAttributes: new { @class = "control-label " })
                                            @Html.EditorFor(model => model.is_Institute, new { htmlAttributes = new { @type = "radio", @class = "radio" } })
                                            @Html.ValidationMessageFor(model => model.is_Institute, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                           </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.User_Name, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.User_Name, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.User_Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                               
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.User_Email, htmlAttributes: new { @class = "control-label" })
                                            @Html.EditorFor(model => model.User_Email, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.User_Email, "", new { @class = "text-danger" })
                                          </div>
                                        </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label " })
                                            @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @rows = "5" } )
                                            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                        </div>
                                        </div>
                                        
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            @Html.LabelFor(model => model.Response, htmlAttributes: new { @class = "control-label " })

                                            @Html.TextAreaFor(model => model.Response, new { @class = "form-control", @rows = "5" } )
                                            @Html.ValidationMessageFor(model => model.Response, "", new { @class = "text-danger" })
                                        </div>
                                        </div>
                                </div>


                     <input type="submit" value="Add" class="btn btn-primary pull-right" />

                    <div class="clearfix"></div>
                        }

                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>

                     
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-profile">
                    <div class="card-avatar">
                        <a href="#pablo">
                            <img class="img" src="../assets/img/faces/marc.jpg" />
                        </a>
                    </div>
                    <div class="content">
                        <h6 class="category text-gray">CEO / Co-Founder</h6>
                        <h4 class="card-title">Alec Thompson</h4>
                        <p class="card-content">
                            Don't be scared of the truth because we need to restart the human foundation in truth And I love you like Kanye loves Kanye I love Rick Owens’ bed design but the back is...
                        </p>
                        <a href="#pablo" class="btn btn-primary btn-round">Follow</a>
                    </div>
                </div>
            </div>
        </div>
    
    </div>
</div>
@section Scripts {
    <script>
                                $('.radio').change(function () {
                                    $('.radio').not(this).prop('checked', false);
                                });
    </script>
}