    <div class="wrapper">
        <div class="main-panel">
            <nav class="navbar navbar-transparent navbar-absolute" style="background-color: #9c27b0;color: white;transition: auto;opacity: 0.7;">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <img src="/images/logo2.png" class="navbar-brand" width="15%" height="20%" style="
    padding-top: 0px;
    padding-right: 0px;
    padding-left: 0px;
    padding-bottom: 0px;
">
                        <a class="navbar-brand" href="#">
                            Pakistan Study Portal
                        </a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            @*<li >
                                    <a href="#pablo" class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="material-icons">dashboard</i>
                                        <p class="hidden-lg hidden-md">Dashboard</p>
                                    </a>
                                </li>*@
                            <li class="dropdown">
                                @{

                                    var notifications = new List<FYP1.Models.Notification>();
                                    if (Session["S_ID"] != null)
                                    {
                                        notifications = new FYP1.Models.Notification() { Fk_Id = (int)Session["S_ID"] }.Notification_Student();
                                    }
                                    else if (Session["I_ID"] != null)
                                    {
                                        notifications = new FYP1.Models.Notification() { Fk_Id = (int)Session["I_ID"] }.Notification_Institute();
                                    }
                                    else if (Session["A_ID"] != null)
                                    {
                                        notifications = new FYP1.Models.Notification().Notification_Admin();
                                    }
                                    int i = 0;
                                }
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" onclick="updateNofity()">
                                    <i class="material-icons">notifications</i>
                                    <span class="notification" id="cc">@notifications.Count</span>
                                    <p class="hidden-lg hidden-md">Notifications</p>
                                </a>
                                <ul class="dropdown-menu">
                                    @foreach (var item in notifications)
                                    {
                                        <li>
                                            <input type="hidden" name="notify_id[@i]" value="@item.N_ID" class="notify"/>
                                            <a href="#">@item.Message</a>
                                            @{i++;
                                            }
                                        </li>
                                    }
                                </ul>

                            </li>
                            <li>
                                <a href="#pablo" class="dropdown-toggle" data-toggle="dropdown">
