@model IEnumerable<FYP1.Models.FeedBack>

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Index";
}

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <h2>FeedBack</h2>
                        <p class="category">@Html.ActionLink("Create New", "Add")</p>
                    </div>
                    <div class="card-content table-responsive">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayName("Sender")
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.User_Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User_Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Message)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Response)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FB_Date)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            @if (item.is_Student)
                            {
                                <td>
                                    Student
                                </td>
                            }
                            else if (item.is_Institute)
                            {
                                <td>
                                    Institute
                                </td>
                            }
                            <td>
                                @Html.DisplayFor(modelItem => item.User_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User_Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Message)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Response)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FB_Date)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.FB_ID }) |
                                @Html.ActionLink("Details", "Search", new { id = item.FB_ID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.FB_ID })
                            </td>
                        </tr>
                    }

                </table>
                </div>
</div></div></div>