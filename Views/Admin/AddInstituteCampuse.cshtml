@model FYP1.ViewModel.AdminViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

    ViewBag.Title = "institutecampuss";
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <h4 class="title"><b>Add </b></h4>
                        <p class="category"><b>Campus</b></p>
                    </div>
                    <div class="card-content">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()



                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.institute.Institute_Name, htmlAttributes: new { @class = "control-label" })

                                        @Html.DropDownListFor(model => model.institute.Institute_ID, ViewBag.InstituteList as SelectList, "", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.institute.Institute_ID, "", new { @class = "error" })
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.institutecampus.InsCampus_PhoneNo, htmlAttributes: new { @class = "control-label" })

                                        @Html.EditorFor(model => model.institutecampus.InsCampus_PhoneNo, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.institutecampus.InsCampus_PhoneNo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.institutecampus.InsCampus_EmailID, htmlAttributes: new { @class = "control-label" })

                                        @Html.EditorFor(model => model.institutecampus.InsCampus_EmailID, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.institutecampus.InsCampus_EmailID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                
                            </div>
                            <div class="row">
                                <div class="col-md-6">

                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.institutecampus.InsCampus_Area, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.institutecampus.InsCampus_Area, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.institutecampus.InsCampus_Area, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.institutecampus.InsCampus_Address, htmlAttributes: new { @class = "control-label" })

                                        @Html.EditorFor(model => model.institutecampus.InsCampus_Address, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.institutecampus.InsCampus_Address, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        
                         <div class="row">
                             <div class="col-md-4">
                                 <div class="form-group label-floating">
                                     @Html.LabelFor(model => model.institutecampus.InsCampus_EstablishYear, htmlAttributes: new { @class = "control-label" })

                                     @Html.EditorFor(model => model.institutecampus.InsCampus_EstablishYear, new { htmlAttributes = new { @class = "form-control" } })
                                     @Html.ValidationMessageFor(model => model.institutecampus.InsCampus_EstablishYear, "", new { @class = "text-danger" })
                                 </div>
                             </div>

                         </div>


                        <input type="submit" value="Create" class="btn btn-primary pull-right" />

                                    <div class="clearfix"></div>



                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
