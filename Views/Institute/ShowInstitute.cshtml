@model IEnumerable<FYP1.Models.Institute.Institute>

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

    ViewBag.Title = "ShowInstitute";
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <h3 class="title"><b>Show Institute</b></h3>
                        <p class="category">
                            <b>
                                @Html.ActionLink("Add Institute", "Addinstitute")
                            </b> <br />
                            <b>
                                @Html.ActionLink("Add Institute-Department", "AddInstituteDepartment")
                            </b>

                        </p>
                    </div>
                    <div class="card-content">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Institute_Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Institute_RegNo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Institute_Affilation)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Password)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Website_Link)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Payment_Info)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Institute_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Institute_RegNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Institute_Affilation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Website_Link)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Payment_Info)
                                </td>
                                <td>
                                    @Html.ActionLink("Campuses", "searchinstitutecampus", "InstituteCampus", new { id = item.Institute_ID }, new { }) |
                                    @Html.ActionLink("Edit", "UpdateInstitute", new { id = item.Institute_ID }) |
                                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                </td>
                            </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>