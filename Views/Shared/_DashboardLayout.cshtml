            </div>
        </div>
    </div>
    <script>
        function updateNofity() {
            var items= [];
            $('input[name^="notify_id"]').each(function () {
                items.push($(this).val());
            });
            $("#cc").html()
            $.ajax({
                type: "POST",
                url: "/Notification/Notification_Update",
                data: { data:items},
                cache: false,
                success: function (data) {
                }
            });
        }
    </script>
